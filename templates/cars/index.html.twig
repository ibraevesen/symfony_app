{% extends 'base.html.twig' %}

{% block title %}Cars index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Cars index</h1>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for car in cars %}
                <tr>
                    <td>{{ car.id }}</td>
                    <td>{{ car.brand }}</td>
                    <td class="d-flex gap-2">
                        <button class="btn btn-warning text-white" data-bs-toggle="modal" data-bs-target="#editCarModal" data-id="{{ car.id }}" data-brand="{{ car.Brand }}">Edit</button>
                        <form method="post" action="{{ path('app_cars_delete', {'id': car.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ car.id) }}">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-end">
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCarModal">
                Add New Car
            </button>
        </div>
    </div>

    <div class="modal fade" id="editCarModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Car</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editCarForm">
                        <input type="hidden" id="carId" name="id">
                        <div class="mb-3">
                            <label for="carBrand" class="form-label">Brand:</label>
                            <input type="text" id="carBrand" name="brand" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Save settings</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addCarModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Car</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="addCarForm">
                        <div class="mb-3">
                            <label for="newCarBrand" class="form-label">Brand:</label>
                            <input type="text" id="newCarBrand" name="brand" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Car</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <script>
        const editCarModal = document.getElementById('editCarModal');
        editCarModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget; // Кнопка, вызвавшая модальное окно
            const brand = button.getAttribute('data-brand');
            const carId = button.getAttribute('data-id');

            // Заполняем поля формы
            document.getElementById('carBrand').value = brand;
            document.getElementById('carId').value = carId;
        });

        // Обработчик отправки формы

        document.getElementById('editCarForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const carId = document.getElementById('carId').value; // ID автомобиля (можно добавить скрытое поле в форму)
            const brand = document.getElementById('carBrand').value;

            fetch('/car/update', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    id: carId,
                    brand: brand,
                }),
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.status === 'success') {
                        location.reload(); // Перезагрузка страницы
                    } else {
                        alert('Error updating car: ' + data.message);
                    }
                })
                .catch(error => console.error('Error:', error));
        });

        document.getElementById('addCarForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const brand = document.getElementById('newCarBrand').value;

            fetch('/car/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ brand: brand }),
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.status === 'success') {
                        location.reload();
                    } else {
                        alert('Error adding car: ' + data.message);
                    }
                })
                .catch(error => console.error('Error:', error));
        });

    </script>
{% endblock %}
